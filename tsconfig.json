{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",        // Use "esnext" module type for ES module syntax
    "outDir": "./dist",        // Output directory for ES module files
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "playground"
  ]
}
